<div class="container">
  <div>
    <div class="row">
      {{#each courses}}
        <div class="col-sm-6 col-lg-4 mb-4">
          <div class="card">
            <a href="/courses/{{this.slug}}">
              <img
                class="card-img-top"
                src="{{this.image}}"
                alt="{{this.image}}"
              />

            </a>
            <div class="card-body">
              <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
              </a>
              <p class="card-text">{{this.decs}}</p>
              <a href="#" class="btn btn-primary">Mua khóa học</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>