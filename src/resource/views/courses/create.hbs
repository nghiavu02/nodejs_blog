<div class="mt-4 container">
  <h3>Đăng khóa học</h3>
  <form method="post" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khóa học: </label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="form-group">
      <label for="decs">Mô tả khóa học: </label>
      <input type="text" class="form-control" id="decs" name="decs" />
    </div>
    <div class="form-group">
      <label for="videoID">ID video: </label>
      <input type="text" class="form-control" id="videoID" name="videoID" />
    </div>
    <div class="form-group">
      <label for="level">Trình độ: </label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>

    <button type="submit" class="btn btn-primary">Tạo khóa học</button>
  </form>
</div>